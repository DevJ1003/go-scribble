{{template "base" .}}

{{define "css"}}

<!-- Quill CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .container {
            margin-top: 30px;
        }
        .note-form {
            max-width: 800px;
            margin: auto;
        }
        .form-title {
            font-size: 24px;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-control {
            border-radius: 0.25rem;
        }
        .btn-custom {
            background-color: #007bff;
            color: white;
        }
        .btn-custom:hover {
            background-color: #0056b3;
            color: white;
        }
        .quill-editor {
            height: 300px;
        }
    </style>
{{end}}

{{define "content"}}

<div class="content-page">
    <div class="container-fluid">
        <div class="desktop-header">
            <div class="card card-block topnav-left">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex justify-content-between">
                        <h4 class="text-capitalize">Edit your Note...</h4>
                    </div>
                </div>
            </div>
            </div>
            <div class="container-fluid">
                <div class="col-lg-15">
                










        <div class="note-form">
            <form id="noteForm">
                <div class="form-group">
                    <label for="title">Note Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Enter note title" required>
                </div>
                <div class="form-group">
                    <label for="content">Note Content</label>
                    <div id="content" class="quill-editor"></div>
                    <input type="hidden" id="hiddenContent" name="content">
                </div>
                <button type="submit" class="btn btn-custom">Save Note</button>
            </form>
            <br>
        </div>
 





                </div>
            </div>
        </div>
    </div>
</div>


{{end}}


{{define "js"}}
<!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Quill JS -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        // Initialize Quill editor
        var quill = new Quill('#content', {
            theme: 'snow',
            modules: {
                toolbar: [
                    [{ 'header': '1' }, { 'header': '2' }],
                    [{ 'list': 'ordered' }, { 'list': 'bullet' }],
                    ['bold', 'italic', 'underline'],
                    [{ 'align': [] }],
                    ['link', 'image'],
                    [{ 'color': [] }, { 'background': [] }]
                ]
            }
        });

        // Handle form submission
        document.getElementById('noteForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const title = document.getElementById('title').value;
            const content = quill.root.innerHTML;

            // Simple validation
            if (!title || !content) {
                alert('Please fill in both the title and content.');
                return;
            }

            // Set hidden input value
            document.getElementById('hiddenContent').value = content;

            // For demonstration, logging the note to the console
            console.log('Note Title:', title);
            console.log('Note Content:', content);

            // Reset the form
            document.getElementById('noteForm').reset();
            quill.root.innerHTML = '';
        });
    </script>
{{end}}